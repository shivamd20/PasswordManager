<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ssipmt.passmgr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".MyCustApplication">
        <activity
            android:name=".PassMgr"
            android:label="@string/title_activity_pass_mgr"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PassMgrApp"
            android:label="@string/title_activity_pass_mgr_app" >
        </activity>
        <activity
            android:name=".AddPass"
            android:label="@string/title_activity_add_pass" >
        </activity>
        <activity
            android:name=".SearchPass"
            android:label="@string/title_activity_search_pass" >
        </activity>
        <activity
            android:name=".UpdatePass"
            android:label="@string/title_activity_update_pass" >
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".ChangePass"
            android:label="@string/title_activity_change_pass" >
        </activity>
    </application>

</manifest>